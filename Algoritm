using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Diagnostics;

namespace ConsoleApp49
{
    class Program
    {
        static void BubbleSort(List<int> minLista)
        {
            for(int i = 0; i < minLista.Count; i++)
            {
                for(int j = 0; j < minLista.Count-1-i; j++)
                {
                    if (minLista[j] > minLista[j + 1])
                    {
                        int temp = minLista[j];
                        minLista[j] = minLista[j + 1];
                        minLista[j + 1] = temp;
                    }
                }
            }
        }

        static void InsertionSort(List<int> nyLista)
        {
            for(int i = 1; i < nyLista.Count; i++)
            {
                for(int j = i; j > 0; j--)
                {
                    if (nyLista[j] < nyLista[j - 1])
                    {
                        int temp = j - 1;
                        nyLista[j - 1] = nyLista[j];
                        nyLista[j] = temp;
                    }
                    else
                        break;
                }
            }
        }

            static void Main(string[] args)
        {
            var tallista = new List<int>();
            Random slump = new Random();

            for (int i = 0; i < 100000; i++)
            {
                tallista.Add(slump.Next(100000));
            }

            Console.WriteLine("BubbleSort: ");
            
            BubbleSort(tallista);

            foreach (int i in tallista)
                Console.Write(i + " ");

            Console.WriteLine(" ");
            Console.WriteLine(" ");

            Console.WriteLine("InsertionSort: ");
            InsertionSort(tallista);

            foreach (int i in tallista)
                Console.Write(i + " ");

            Console.WriteLine(" ");
            Console.WriteLine(" ");
        }
    }
}
